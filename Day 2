# https://adventofcode.com/2021/day/2
list_of_commands = []  #input goes in this list. I used https://arraythis.com/ to convert to CSV

# part 1
horizontal = 0
depth = 0
for command in list_of_commands:
    direction, number = command.split()

    match direction:
        case "forward":
            horizontal += int(number)
        case "down":
            depth += int(number)
        case "up":
            depth -= int(number)
print(depth * horizontal)

# part 2
aim = 0
horizontal = 0
depth = 0
for command in list_of_commands:
    direction, number = command.split()

    match direction:
        case "forward":
            horizontal += int(number)
            depth += int(number) * aim
        case "down":
            aim += int(number)
        case "up":
            aim -= int(number)
print(depth * horizontal)
